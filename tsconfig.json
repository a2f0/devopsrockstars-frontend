{
  "extends": "./node_modules/gts/tsconfig-google.json",

  "compilerOptions": {
    "types": ["webdriverio/async", "mocha", "expect-webdriverio"],
    "allowJs": false,
    "target": "esnext",
    "rootDir": ".",
    "outDir": "src/ts-out",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/image/chicago_skyline.svg",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["src/ts-out/**/*"]
}
