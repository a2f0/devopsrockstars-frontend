{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "autoCompileOpts": {
    "autoCompile": true,
    "tsNodeOpts": {
        "transpileOnly": true,
        "project": "tsconfig.json",
    },
    "tsConfigPathsOpts": {
        "baseUrl": "./",
    }
  },
  "compilerOptions": {
    "allowJs": false,
    "target": "esnext",
    "rootDir": ".",
    "outDir": "src/ts-out",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node", // For wdio: https://webdriver.io/docs/typescript
      "webdriverio/sync",
      "@wdio/mocha-framework",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/image/chicago_skyline.svg",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["src/ts-out/**/*"]
}
